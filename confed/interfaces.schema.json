{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "Network Interface Configuration",
  "description": "Specifies network configuration of the system",
  "configFile": {
    "path": "/etc/network/interfaces",
    "toJSON": "networkparser",
    "fromJSON": ["networkparser", "-s"],
    "restartDelayMS": 4000,
    "service": "networking"
  },
  "definitions": {
    "iface_common": {
      "type": "object",
      "properties": {
        "auto": {
          "type": "boolean",
          "default": true,
          "title": "Auto",
          "_format": "checkbox",
          "propertyOrder": 1
        },
        "name": {
          "type": "string",
          "title": "Name",
          "minLength": 1,
          "propertyOrder": 2
        },
        "allow-hotplug": {
          "type": "boolean",
          "default": true,
          "title": "Allow hotplug",
          "_format": "checkbox",
          "propertyOrder": 3
        }
      },
      "_properties_that_are_not_used_for_now": {
        "pre-up": {
          "title": "Pre-up command",
          "type": "string",
          "propertyOrder": 100
        },
        "up": {
          "title": "Up command",
          "type": "string",
          "propertyOrder": 101
        },
        "post-up": {
          "title": "Post-up command",
          "description": "Same as 'Up command'",
          "type": "string",
          "propertyOrder": 102
        },
        "down": {
          "title": "Down command",
          "type": "string",
          "propertyOrder": 103
        },
        "pre-down": {
          "title": "Pre-down command",
          "description": "Same as 'Down command'",
          "type": "string",
          "propertyOrder": 104
        },
        "post-down": {
          "title": "Post-down command",
          "type": "string",
          "propertyOrder": 105
        }
      }
    },
    "method_loopback": {
      "title": "Loopback interface",
      "allOf": [
        { "$ref": "#/definitions/iface_common" },
        {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "options": {
                "hidden": true
              },
              "enum": ["loopback"]
            },
            "options": {
              "type": "object",
              "options": {
                "hidden": true
              }
            }
          },
          "required": ["method"]
        }
      ]
    },
    "method_static": {
      "title": "Static IP",
      "allOf": [
        { "$ref": "#/definitions/iface_common" },
        {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "options": {
                "hidden": true
              },
              "enum": ["static"]
            },
            "options": {
              "type": "object",
              "title": "Options",
              "properties": {
                "address": {
                  "type": "string",
                  "title": "IP address",
                  "format": "ipv4",
                  "propertyOrder": 11
                },
                "netmask": {
                  "type": "string",
                  "title": "Network mask",
                  "format": "ipv4",
                  "propertyOrder": 12
                },
                "broadcast": {
                  "type": "string",
                  "title": "Broadcast address",
                  "format": "ipv4",
                  "propertyOrder": 13
                },
                "gateway": {
                  "type": "string",
                  "title": "Default gateway",
                  "format": "ipv4",
                  "propertyOrder": 14
                },
                "metric": {
                  "type": "string",
                  "title": "Routing metric for default gateway",
                  "format": "ipv4",
                  "propertyOrder": 15
                },
                "hwaddress": {
                  "type": "string",
                  "title": "MAC address",
                  "pattern": "^(?:[0-9A-Fa-f]{2}:){5}[0-9A-Fa-f]{2}$",
                  "propertyOrder": 16
                },
                "pointopoint": {
                  "type": "string",
                  "title": "Point-to-point address",
                  "format": "ipv4",
                  "propertyOrder": 17
                },
                "mtu": {
                  "type": "string",
                  "title": "MTU",
                  "default": 1500,
                  "propertyOrder": 18
                },
                "scope": {
                  "type": "string",
                  "title": "Address validity scope",
                  "enum": ["global", "link", "host"],
                  "propertyOrder": 19
                }
              },
              "required": ["address"],
              "defaultProperties": ["address", "netmask", "gateway", "mtu"]
            }
          },
          "defaultProperties": ["auto", "method", "options"],
          "required": ["name", "method"]
        }
      ]
    },
    "method_dhcp": {
      "title": "DHCP",
      "allOf": [
        { "$ref": "#/definitions/iface_common" },
        {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "options": {
                "hidden": true
              },
              "enum": ["dhcp"]
            },
            "options": {
              "type": "object",
              "title": "Options",
              "properties": {
                "hwaddress": {
                  "type": "string",
                  "title": "MAC address",
                  "pattern": "^(?:[0-9A-Fa-f]{2}:){5}[0-9A-Fa-f]{2}$",
                  "propertyOrder": 11
                },
                "hostname": {
                  "type": "string",
                  "title": "Hostname to be requested",
                  "propertyOrder": 12
                },
                "client": {
                  "type": "string",
                  "title": "Client identifier",
                  "propertyOrder": 13
                }
              },
              "defaultProperties": "hostname"
            }
          },
          "defaultProperties": ["auto", "method", "options"],
          "required": ["name", "method"]
        }
      ]
    },
    "method_ppp": {
      "title": "PPP",
      "allOf": [
        { "$ref": "#/definitions/iface_common" },
        {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "options": {
                "hidden": true
              },
              "enum": ["ppp"]
            },
            "options": {
              "type": "object",
              "title": "Options",
              "properties": {
                "provider": {
                  "type": "string",
                  "title": "Provider name",
                  "enum":[ "mts","tele2","beeline","megafon","provider1","provider2","provider3","provider4" ],
                  "default":"МТС",
                  "options":{"enum_titles":["МТС","Теле 2","Билайн","Мегафон","Провайдер 1","Провайдер 2","Провайдер 3","Провайдер 4"]},
                  "description": "Refers to the file in /etc/ppp/peers",
                  "propertyOrder": 11
                },
                "unit": {
                  "type": "string",
                  "title": "PPP unit number",
                  "propertyOrder": 12
                },
                "options": {
                  "type": "string",
                  "title": "Additional options",
                  "propertyOrder": 13
                }
              },
              "defaultProperties": ["provider"]
            }
          },
          "defaultProperties": ["auto", "method", "options"],
          "required": ["name", "method"]
        }
      ]
    },
    "method_manual": {
      "title": "Manual",
      "allOf": [
        { "$ref": "#/definitions/iface_common" },
        {
          "type": "object",
          "properties": {
            "method": {
              "type": "string",
              "options": {
                "hidden": true
              },
              "enum": ["manual"]
            },
            "options": {
              "type": "object",
              "title": "Options",
              "properties": {
                "hwaddress": {
                  "type": "string",
                  "title": "MAC address",
                  "pattern": "^(?:[0-9A-Fa-f]{2}:){5}[0-9A-Fa-f]{2}$",
                  "propertyOrder": 11
                },
                "mtu": {
                  "type": "string",
                  "title": "MTU",
                  "propertyOrder": 12
                }
              },
              "defaultProperties": ["mtu"]
            }
          },
          "defaultProperties": ["auto", "method"],
          "required": ["name", "method"]
        }
      ]
    },
    "provider":{
        "type":"object",
        "title":"Провайдер",
        "headerTemplate": "{{self.name}}",
        "properties": {
            "name":{
                "type":"string",
                "title":"Наименование",
                "propertyOrder": 1,
                "enum":[ "mts","tele2","beeline","megafon","provider1","provider2","provider3","provider4" ],
                "default":"МТС",
                "options":{"enum_titles":["МТС","Теле 2","Билайн","Мегафон","Провайдер 1","Провайдер 2","Провайдер 3","Провайдер 4"]}
            },
            "tty":{
                "type":"string",
                "title":"Порт модема",
                "propertyOrder": 2,
                "default":"/dev/ttyGSM"
            },
            "sim":{
                "type":"string",
                "title":"Слот",
                "propertyOrder": 3,
                "enum":["sim1","sim2"],
                "default":"",
                "options":{"enum_titles":["Sim 1","Sim 2"]}
            },
            "apn":{
                "type":"string",
                "title":"Точка доступа APN",
                "propertyOrder": 4,
                "default":""
            },
            "user":{
                "type":"string",
                "title":"Пользователь",
                "propertyOrder": 5,
                "default":""
            },
            "passwd":{
                "type":"string",
                "title":"Пароль",
                "propertyOrder": 6,
                "default":""
            }
        }
    }
  },
  "properties": {
    "providers": {
        "type": "array",
        "title": "Провайдеры",
        "description": "Список провайдеров GSM",
        "propertyOrder": 1,
        "items": { "$ref": "#/definitions/provider" },
        "_format": "table",
        "options": { "disable_collapse": true }
    },
    "interfaces": {
      "type": "array",
      "title": "List of network interfaces",
      "propertyOrder": 2,
      "items": {
        "headerTemplate": "Interface{{ |self.name}}",
        "oneOf": [
          { "$ref": "#/definitions/method_loopback" },
          { "$ref": "#/definitions/method_static" },
          { "$ref": "#/definitions/method_dhcp" },
          { "$ref": "#/definitions/method_ppp" },
          { "$ref": "#/definitions/method_manual" }
        ]
      },
      "_format": "tabs"
    }
  },
  "required": ["interfaces"]
}
